<p id="notice"><%= notice %></p>

<h3>Scrapers</h3>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>#ID</th>
      <th>Thread size</th>
      <th>Proxy usage</th>
      <th>Http method</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @scrapers.each do |scraper| %>
      <tr>
        <td><%= scraper.id %></td>
        <td><%= scraper.thread_size %></td>
        <td><%= scraper.proxy_usage %></td>
        <td><%= scraper.http_method %></td>
        <td>
          <%= link_to 'Run', '', class: 'btn btn-xs btn-success' %>
          <%= link_to 'Edit', edit_scraper_path(scraper), class: 'btn btn-xs btn-secondary' %>
          <%= link_to 'Destroy', scraper, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
