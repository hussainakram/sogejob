<p id="notice"><%= notice %></p>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Tried count</th>
      <th>Saved Job count</th>
      <th>India</th>
      <th>Germany</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= ScraperLog.sum(:records_found) %></td>
      <td><%= Job.count %></td>
      <td><%= Job.where(country: 'India').count %></td>
      <td><%= Job.where(country: 'Germany').count %></td>


    </tr>
  </tbody>
</table>
<h3>Scrapers</h3>
<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Thread size</th>
      <th>Proxy usage</th>
      <th>Http method</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @scrapers.each do |scraper| %>
      <tr>
        <td><%= scraper.name %></td>
        <td><%= scraper.thread_size %></td>
        <td><%= scraper.proxy_usage %></td>
        <td><%= scraper.http_method %></td>
        <td>
          <%= link_to 'Run', '', class: 'btn btn-xs btn-success' %>
          <%= link_to 'Edit', edit_scraper_path(scraper), class: 'btn btn-xs btn-secondary' %>
          <%= link_to 'Destroy', scraper, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
